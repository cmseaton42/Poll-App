
extends ../base.pug

block links
    link(rel='stylesheet' href='/css/polls/new.min.css')

block content
    .container-fluid.d-flex.flex-column.w-100.align-items-center.justify-content-center

        form.col-sm-12.col-lg-6(action='/polls/new', method='POST')
            h1.text-primary Create Poll
            hr

            if errors
                each err in errors
                    .alert.alert-danger #[strong Whoa!] #{err.msg}

            if success_messages.length > 0
                .alert.alert-success #[strong Success!] #{success_messages}

            if error_messages.length > 0
                .alert.alert-danger #[strong Oops!] #{error_messages}

            .form-group.row
                label.col-sm-3.col-lg-3.col-form-label(for='title') Title
                .col-sm-9.col-lg-9
                    input#title.form-control(type='text', placeholder='', name='title')

            .form-group.row
                label.col-sm-3.col-lg-3.col-form-label(for='options') Options
                .col-sm-9.col-lg-9
                    textarea#options.form-control(rows='8' placeholder='Place Each Option on a New Line:\nOption A\nOption B\nOption C ', name='options')

            hr
            
            .form-group.row.d-flex.justify-content-center
                button.col-sm-6.col-lg-4.btn.btn-primary(type='submit') Create