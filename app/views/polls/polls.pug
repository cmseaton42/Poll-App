extends ../base.pug

block links
    link(rel='stylesheet' href='/css/polls/polls.min.css')

block content
    .container-fluid.justify-content-around
        .row.w-100.justify-content-center
        if polls.length > 0
            .row.justify-content-center
                each poll in polls
                    .col-sm-6.col-md-4.col-lg-3
                        .card
                            .card-block
                                h3.card-title #{poll.title}
                                a.btn.btn-outline-primary(href='/polls/' + poll.url) View
        else
            .row.justify-content-center
                .alert.alert-info(style="margin-top: 30px") #[strong Oh Nooo!] No Polls Exist Yet, You Should Make One!!! =]
        